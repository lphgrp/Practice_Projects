pipeline {
	agent any
	stages {
		stage ("--Clean Project---") {
			steps {
				bat "cd C:\\Users\\Pankaj\\.jenkins\\workspace\\Project_PipeLine_Maven\\MavenWeb\\pom.xml"
				bat "mvn clean install"
			}
		}
		stage ("--Create WarFile---") {
			steps {
				bat "mvn package"
			}
		}
		stage ("--Deploy WarFile---") {
			steps {
				bat "copy target\\MavenWeb.war D:\\LPH_Learning\\Installed_Soft\\Tomcat_Jenkins\\webapps\\"
			}
		}
	}
}